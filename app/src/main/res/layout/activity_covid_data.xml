<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CovidData">

    <ListView
        android:id="@+id/Covlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/Covbtn"/>

    <Button
        android:id="@+id/Covbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="covid"
        android:layout_above="@id/Covpgbar"/>
    <Button
        android:id="@+id/Resultbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/covid_data_btn"
        android:layout_above="@id/Covpgbar"/>

    <EditText
        android:id="@+id/cvedt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/Covbtn"
        android:layout_above="@id/Covpgbar"
        android:hint="@string/covid_country"
        android:inputType="textCapCharacters"/>

    <ProgressBar
        android:id="@+id/Covpgbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
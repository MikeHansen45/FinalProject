<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activityM_TV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ma_TV"
        android:gravity="center" />

    <TextView
        android:id="@+id/activityM_TV2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/author"
        android:gravity="center"
        android:textSize="13sp"
        />
    <Button
        android:id="@+id/toAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/toAudioButtonText"

        />
    <Button
        android:id="@+id/toCovid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Covid Data"
        />
    <Button
        android:id="@+id/toRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/goToRecipe"
        />
    <Button
        android:id="@+id/toTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ticket Master"
        />


</LinearLayout>